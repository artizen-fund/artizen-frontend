{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components": ["src/components"],
      "@contracts": ["src/contracts"],
      "@forms/*": ["src/forms/*"],
      "@gql": ["src/gql"],
      "@lib": ["src/lib"],
      "@pages": ["src/pages"],
      "@public/*": ["public/*"],
      "@theme": ["src/theme"],
      "@types": ["src/types"],
      "@copy/*": ["src/copy/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.graphql"],
  "exclude": ["node_modules"]
}
